<h1 class=" container text-center">Burgers</h1>

<div class="container">
    <div class="row">
        <div class="col-5 text-center border border-dark bg-light">
            <h2>Burgers waiting to be eaten!</h2>
                {{#each burgers}}
                {{#unless devoured}}
               
                    <br><h3>{{burger_name}}</h3>
                    <button class="uneaten btn btn-danger" data-id="{{id}}" data-devoured="{{devour}}">
                        EAT DA BURGER
                    </button>
                <br>
                {{/unless}}
                {{/each}}
           <br>
        </div>
        <div class="col-2"></div>
        <div class="col-5 text-center burgerHolder border border-dark bg-light">
            <h2>Burgers that got eaten!!</h2>

                
                {{#each burgers}}
                {{#if devoured}}
                <br>
                <h3><s>{{burger_name}}</s></h3>
                {{/if}}
                {{/each}}
           
        </div>
    </div>
</div>
<div class="row">
    <div class="col-2"></div>
<div class="container col-8 text-center my-5 border border-dark bg-light">
    <h2>Add a burger</h2>
    <form class="add-burger">

        <div class="form-group">
            <label for="burgerAdd">Whats your burger name:</label>
            <input type="text" id="burgerAdd" name="name">
        </div>

        <button type="submit">Add that burger yo!</button>
    </form>
</div >
<div class="col-2"></div>
</div>